                <Grid Height="70" Background="White">
                    <Button x:Name="ButtonCloseMenu" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Collapsed" Click="ButtonCloseMenu_Click" >
                        <materialDesign:PackIcon Foreground="#FFCBC9C9" Kind="ArrowLeft" Width="25" Height="25" />
                    </Button>
                    <Button x:Name="ButtonOpenMenu" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonOpenMenu_Click" >
                        <materialDesign:PackIcon Foreground="#FFCBC9C9" Kind="Menu" Width="25" Height="25" />
                    </Button>
                </Grid>
                <ListView x:Name="ListOfViews" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon x:Name="ButtonDefaultView" Kind="Calendar" Width="25" Height="25" Margin="10" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="Home" VerticalAlignment="Center" Margin="20 10" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon x:Name="ButtonDailyView" Kind="Pencil" Width="25" Height="25" Margin="10" VerticalAlignment="Center" Foreground="White" />
